let pp1 = 19.29;
let pp2 = 0.80;
let pp3 = 4.85;

let custo = 0;

if (pp1 <= 18){
  console.log("Comprei o produto 1");
  custo += pp1; 
}
if (pp2 < 3) {
  if(pp2 >= 1.5){
    console.log("Comprei o produto 2");
    custo += pp2;
  }
  else {
    console.log("Tem algo errado com o produto 2");
  }
}

console.log("Comprei o produto 3");
custo += pp3;

console.log("Eu paguei", custo, "reais.");

//o if faz a condição se ela for verdadeira
// o while que repete enquanto a condição for verdadeira
// o for faz a ação determinadas vezes para cada elemento
const palavra = "alguem";

let numvogais = 0;

for (const letra of "alguem") {
  if(letra == "a"){ numvogais += 1;}
  if(letra == "e"){ numvogais += 1;}
  if(letra == "i"){ numvogais += 1;}
  if(letra == "o"){ numvogais += 1;}
  if(letra == "u"){ numvogais += 1;}
}

 console.log(numvogais);
